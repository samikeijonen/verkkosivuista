{% if navFooter.items %}
  <nav class="nav nav--social" aria-label="Footer">
    <ul class="nav__items nav__items--social reset-list">
      {% for item in navFooter.items %}
        {% set relAttribute = '' %}
        {% set currentAttribute = '' %}

        {% if item.rel %}
          {% set relAttribute = ' rel="' + item.rel + '"' %}
        {% endif %}

        <li class="nav__item nav__item--social">
          <a class="nav__anchor nav__anchor--social" href="{{ item.url }}"{{ relAttribute | safe }}>
						<span class="screen-reader-text">{{ item.text }}</span>
						{{ icon[item.icon] | safe }}
					</a>
        </li>
      {% endfor %}
    </ul>
  </nav>
{% endif %}
